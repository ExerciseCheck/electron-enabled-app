<div class="container-fluid h-100">
    <div class="row h-100">
      {{>dashboardNav}}
        <div class="col-sm-9 col-md-10">
            <div style="padding: 30px">
                <h3>Reference Exercises</h3>
                <br>
                <div class="card">
                    <div style="padding: 20px">
                        <table id="userTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Data</th>
                                <th>name</th>
                                <th>exerciseName</th>
                                <th>UserId</th>
                                <th>ExerciseId</th>
                                <th>numSets</th>
                                <th>numRepetition</th>
                                <th>difficultyLevel</th>
                                <th>createdAt</th>
                              {{#role user 'admin'}}
                                  <th>Edit</th>
                                  <th>Delete</th>
                              {{/role}}
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var table;
    $(document).ready(function () {
        let userAndExerciseIds = [];
        let recordId = '';

      table = $('#userTable').DataTable({
            processing: true,
            serverSide: true,
            scrollX: true,
            scrollY: '500px',
            scrollCollapse: true,
            lengthChange: false,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print', 'colvis'
            ],
            ajax: {
                url : "api/table/refexercise",
                data: function (d) {
                    d.fields = " _id userId exerciseId numSets createdAt diffLevel name exerciseName numRepetition";
                }
            },
            columns: [
                 {
                    data: "name",
                    defaultContent: ""
                 },
                 {
                    data: "exerciseName",
                    defaultContent: ""
                },
                {
                    data: "userId",
                    visible: false,
                    defaultContent: ""
                },
                {
                    data: "exerciseId",
                    visible: false,
                    defaultContent: ""
                },
                {
                    data: "numSets",
                    defaultContent: ""
                },
              {{#role user 'clinician'}}
                {
                  data: "createdAt",
                  render: function (data, type, row) {
                    recordId =  row._id;

                    userAndExerciseIds = [row.userId, row.exerciseId, row.exerciseName, row.name];
                    return '<button class="btn btn-primary btm-sm" id="download'+row.exerciseId+'" href="#" value="Generate data" onclick="downloadDataForReference(userAndExerciseIds  ,\'' + recordId + '\')">Download</button>';

                  }

                },
              {{/role}}
                {
                    data: "numRepetition",
                    defaultContent: ""
                },
                {
                    data: "diffLevel",
                    defaultContent: ""
                },
                {
                    data: "createdAt",
                    render: function (data, type, row) {
                      var date = new Date(row.createdAt);
                       return date.toDateString() + ' ' + date.toLocaleTimeString('en-us');
                    }
                },
              {{#role user 'admin'}}
                  {
                      data: "_id",
                      visible: false,
                      render: function (data, type, row) {
                          if ( row.type === 'Reference' ) {
                            return '<button class="btn btn-secondary" id="edit' + row._id + '" onclick="editDoc(\'' + row._id + '\')">Edit</button>';
                          }
                          else {
                            return'';
                          }
                      },
                  },
                  {
                      data: "_id",
                      visible: false,
                      render: function (data, type, row) {
                          return '<button class="btn btn-danger" id="delete' + row._id + '" onclick="deleteDoc(\'' + row._id + '\')">Delete</button>';
                      },

                  }
              {{/role}}
            ]
        });
    });
</script>
<script type="text/javascript" src="public/scripts/userexercise/viewReferenceAndPractice.js"></script>
<link rel="stylesheet" href="public/css/styleSheet/genericStyles.css">
