<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div class="row justify-content-center text-center">
        <div class="col-xl-10">
          <p id="title">Let's review the exercise details.</p>
        </div>
      </div>
      <div class="row justify-content-center text-center">
        <div class="col-xl-6">
          <input type="hidden" id="updateSettingIsPushed" value='false'>
          <div class="row justify-content-center text-center">
            <div class="col-xl-6">
              <form id="loginForm" style="padding-top:20px; padding-left:20px;">
                <div class="form-group">
                  <label for="numSets" class="label">Number of Sets</label>
                  <input type="number" class="form-control" id="numSets" aria-describedby="" placeholder="Enter a number" value={{defaultNumSets}}>
               </div>
               <div class="form-group">
                 <label for="numReps" class="label">Number of Repetitions</label>
                 <input type="number" class="form-control" id="numReps" aria-describedby="" placeholder="Enter a number" value={{defaultNumReps}}>
               </div>
               {{#if referenceExists}}
               <a id="save" href="#" onclick="update()">Update settings</a>
               {{else}}
               <a id="save" href="#" onclick="changeSetting()">Update settings</a>
               {{/if}}
             </form>
            </div>
          </div>
        </div>
        <div class="col-xl-6">
         <div class="row">
            <div class="col-xl-8">
              <div class="row">
                <div class="col">
                  <p id ="refExercise">Reference Exercise <br></p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                   <p id="patientName">{{formatName patientName}}
                    {{#if referenceExists}}
                      has a reference exercise for
                    {{else}}
                      does not have a reference
                    {{/if}}
                  </p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                   {{#if referenceExists}}
                     <p id ="exerciseName">{{formatName exerciseName}}.</p>
                   {{else}}
                     <p id ="pExerciseName">exercise for <span id="sExerciseName"> {{formatName exerciseName}}.</span></p>
                   {{/if}}
                </div>
              </div>
              {{#if referenceExists}}
              <div class="row" style="margin-top:30px;">
                <div class="col">
                   <a id="view" href="#" onclick="viewReferences()">View reference exercises</a>
                </div>
              </div>
              <div class="row">
                <div class="col">
                   <a id="update" href="#" onclick="updateReference()">Update reference exercise</a>
                </div>
              </div>
              <div class="row">
                <div class="col">
                   <a id="start" href="#" onclick="StartPracticeSession()">Start exercise session</a>
                </div>
              </div>
             {{else}}
             <div class="row" style="margin-top:30px;">
                <div class="col">
                   <a id="createRef" href="#" onclick="createRef()">Create reference exercise</a>
                </div>
              </div>
             {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<link rel="stylesheet" href="/public/css/styleSheet/setting.css">
<script type="text/javascript" src="/public/scripts/userexercise/setting.js"></script>




