<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div style="padding: 30px">
        <h3>Exercises</h3>
          <a class="btn btn-primary" href="exercise/create">Create</a>
        <hr>
        <div class="card">
          <div style="padding: 20px;">
            <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
              <tr>
                <th></th>
                <th>Exercise Name</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Joint</th>
                <th>Axis</th>
                <th>Direction</th>
                {{#role user 'clinician'}}
                  <th>ID</th>
                  <th>Edit</th>
                  <th>Delete</th>
                {{/role}}
              </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var table;
  $(document).ready(function () {

    table = $('#table').DataTable({
      processing: true,
      serverSide: true,
      scrollX: true,
      scrollY: '500px',
      scrollCollapse: true,
      lengthChange: false,
      dom: 'Bfrtip',
      buttons: [
        'copy', 'csv', 'excel', 'pdf', 'print','colvis'
      ],
      ajax: {
        url : "api/table/exercise",
        data: function (d) {
          d.fields = "exerciseName description createdAt joint axis direction";
        }
      },
      columns: [
        {{#role user 'clinician'}}
        {
          render: function (data, type, row) {
            // var date = new Date(row.createdAt);
            // <input type="checkbox" class="sub_chk" data-id="1">&nbsp;&nbsp;
            return '<button class="btn btn-primary btm-sm" id="download'+row._id+'" href="#" value="Generate data" onclick="downloadData(\'' + row._id + '\')">Generate data</button>';
            // return '<input id="download" type="button" class="btn btn-primary btn-sm" value="Download"/>';
          }

        },
        {{/role}}
        {
          data: "exerciseName",
          defaultContent: ""
        },
        {
          data: "description",
          defaultContent: ""
        },
        {
          data: "createdAt",
          render: function (data, type, row) {
            var date = new Date(row.createdAt);
            return date.toDateString() + ' ' + date.toLocaleTimeString('en-us');
          }
        },
        {
          data: "joint",
          defaultContent: ""
        },
        {
          data: "axis",
          defaultContent: ""
        },
        {
          data: "direction",
          defaultContent: ""
        },
        {{#role user 'clinician'}}
          {
            data: "_id",
            defaultContent: ""
          },
          {
            data: "_id",
            render: function (data, type, row) {
              return '<button class="btn btn-secondary" id="edit'+row._id+'" onclick="editDoc(\'' + row._id + '\')">Edit</button>';
            },
            visible: false
          },
          {
            data: "_id",
            render: function (data, type, row) {
              return '<button class="btn btn-danger" id="delete'+row._id+'" onclick="deleteDoc(\'' + row._id + '\')">Delete</button>';
            },
            visible: false
          }
        {{/role}}
      ]
    });
  });

</script>
<script type="text/javascript" src="public/scripts/exercise/index.js"></script>
