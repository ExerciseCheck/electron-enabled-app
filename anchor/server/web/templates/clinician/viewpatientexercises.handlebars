<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
     <div class="col-sm-9 col-md-10">
       <div id="mainContent">
         <br><br>
         <h1>Select an exercise.</h1>
         <h3>You are currently working with Patient {{formatName patientName}}.</h3>
         <br>
         <form>
           <div class="form-group">
             <div class="search">
               <span class="fa fa-search"></span>
                 <input type="search" class="form-control" id="search" onkeyup="filter()" placeholder:"Search by Patient ID">
              </div>
              <span id="AddExrcsSpan">
                <button type="button" class="btn addExercise" id="addExercise" onclick="addExr()">
                  <span>ADD EXERCISE <i class="fa fa-plus"></i></span>
                </button>
             </span>
           </div>              
         </form>
         <br><br>    
         <ul>
           {{#each exercises}}
             <li class="listButtons">
               <a href= '/userexercise/setting/{{this._id}}/{{../patientId}}'>{{formatName this.exerciseName}}</a>
             </li>
          {{/each}}
        </ul>
        <button onclick="topFunction()" id="scrollToTop" title="Go to top"><i class="fa fa-arrow-up"></i></button>
      </div>
    </div>
   </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="../public/css/styleSheet/viewPatientExercises.css">
<link rel="stylesheet" href="../public/css/styleSheet/scrollToTop.css">
<script type="text/javascript" src="../public/scripts/scrollToTop.js"></script>
<script type="text/javascript" src="../public/scripts/clinician.js"></script>


