<div class="container-fluid h-100">
    <div class="row h-100">
      {{>dashboardNav}}
        <div class="col-sm-9 col-md-10">
            <div style="padding: 30px">
                <h3>Reference Exercises for {{patientName}}</h3>
                <br>
                <div class="card">
                    <div style="padding: 20px">
                        <table id="userTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>exerciseName</th>
                                <th>ExerciseId</th>
                                <th>numSets</th>
                                <th>numRepetition</th>
                                <th>diffLevel</th>
                                <th>createdAt</th>
                                <th>view</th>
                                <th>Edit</th>
                                <th>Delete</th>
                             </tr>
                           </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var table;
    const userId = window.location.pathname.split('/').pop();
    $(document).ready(function () {
        table = $('#userTable').DataTable({
            processing: true,
            serverSide: true,
            scrollX: true,
            scrollY: '500px',
            scrollCollapse: true,
            lengthChange: false,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print', 'colvis'
            ],
            ajax: {
                url: "api/table/userexercise/reference/" + userId,
                data: function (d) {
                    d.fields = "exerciseId numSets diffLevel createdAt type name exerciseName numRepetition";
                }
            },
            columns: [
                 {
                    data: "exerciseName",
                    defaultContent: ""
                },
                {
                    data: "exerciseId",
                    visible: false,
                    defaultContent: ""
                },
                {
                    data: "numSets",
                    defaultContent: ""
                },
                {
                    data: "numRepetition",
                    defaultContent: ""
                },
                {
                    data: "diffLevel",
                    defaultContent: ""
                },
                {
                    data: "createdAt",
                    render: function (data, type, row) {
                      var date = new Date(row.createdAt);
                       return date.toDateString() + ' ' + date.toLocaleTimeString('en-us');
                    }
                },
                {
                      data: "_id",
                      visible: false,
                      render: function (data, type, row) {
                          if ( row.type === 'Reference' ) {
                            return '<button class="btn btn-secondary" id="edit' + row._id + '" onclick="view(\'' + row._id + '\')">View</button>';
                          }
                          else {
                            return'';
                          }
                      },
                  },
                {
                      data: "_id",
                      visible: false,
                      render: function (data, type, row) {
                          if ( row.type === 'Reference' ) {
                            return '<button class="btn btn-secondary" id="edit' + row._id + '" onclick="editDoc(\'' + row._id + '\')">Edit</button>';
                          }
                          else {
                            return'';
                          }
                      },
                  },
                  {
                      data: "_id",
                      visible: false,
                      render: function (data, type, row) {
                          return '<button class="btn btn-danger" id="delete' + row._id + '" onclick="deleteDoc(\'' + row._id + '\')">Delete</button>';
                      },

                  }
             ]
        });
    });
</script>
<script type="text/javascript" src="public/scripts/clinician/viewReferences.js"></script>
